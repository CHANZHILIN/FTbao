<resources  xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="radioGroup">
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="radioBotton">
        <item name="android:button">@null</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/rg_rb_textcolor_selector</item>
    </style>

    <style name="home_frgment_rbStyle">
        <item name="android:button">@null</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="roundedImage" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="com.example.jinbiao.ftbao:riv_corner_radius">30dp</item>
        <item name="com.example.jinbiao.ftbao:riv_border_width">1dp</item>
        <item name="com.example.jinbiao.ftbao:riv_border_color">#fff</item>
        <item name="com.example.jinbiao.ftbao:riv_mutate_background">true</item>
        <item name="com.example.jinbiao.ftbao:riv_tile_mode">repeat</item>
        <item name="com.example.jinbiao.ftbao:riv_oval">true</item>
    </style>
</resources>
