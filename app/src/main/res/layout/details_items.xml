<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<LinearLayout
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tshirt_proinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="7dp"
        android:text="Vero Moda2017夏季新品圆领贴布印花舞袖短袖上衣|13453451354554354541"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:background="@drawable/view_list_details"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10px"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tshirt_price_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥ 399"
            android:textColor="#B30808"
            android:textSize="34px"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="618狂欢价"
                android:textSize="18px"
                android:padding="3dp"/>
            <TextView
                android:id="@+id/tshirt_current_price_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#B30808"
                android:padding="3dp"
                android:textSize="18px"
                android:text="￥ 399"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/delivery_free"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18px"
                android:paddingLeft="10px"
                android:text="快递：0元"/>
            <TextView
                android:id="@+id/sale_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textSize="18px"
                android:text="月销 24"/>
            <TextView
                android:id="@+id/goodcomment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18px"
                android:gravity="right"
                android:paddingRight="10px"
                android:text="好评率：100%"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="20px"
                    android:background="#B30808"
                    android:textColor="#FFFFFF"
                    android:padding="2dp"
                    android:text="店铺优惠券"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20px"
                    android:layout_marginLeft="10dp"
                    android:text="领取优惠券"/>

            </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">


           </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:orientation="vertical">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:background="#FDE5E0"
                       android:textSize="18px"
                       android:textColor="#B30808"
                       android:paddingLeft="8px"
                       android:layout_margin="2dp"
                       android:text="促销"/>
                   <TextView
                       android:id="@+id/tshirt_proact"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textSize="18px"
                       android:paddingLeft="8px"
                       android:layout_margin="2dp"
                       android:text="满两件，享部分地区包邮，不要和港澳台地区"/>

               </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FDE5E0"
                        android:textSize="18px"
                        android:textColor="#B30808"
                        android:paddingLeft="8px"
                        android:layout_margin="2dp"
                        android:text="积分"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18px"
                        android:layout_margin="2dp"
                        android:text="购买可获199积分"/>

                </LinearLayout>


            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_margin="3dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18px"
                android:paddingLeft="10px"
                android:text="正品保证"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textSize="18px"
                android:text="急速退款"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18px"
                android:gravity="right"
                android:paddingRight="10px"
                android:text="七天退换"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:gravity="left">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22px"
            android:layout_gravity="center_vertical"
            android:layout_margin="3dp"
            android:text="线下门店有售"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:gravity="left">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22px"
                android:layout_gravity="center_vertical"
                android:layout_margin="3dp"
                android:text="产品参数"/>
            <TextView
                android:id="@+id/list_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22px"
                android:layout_gravity="center_vertical"
                android:layout_margin="3dp"
                android:text="产品参数"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_gravity="left">
            <TextView
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22px"
                android:layout_gravity="center_vertical"
                android:layout_margin="3dp"
                android:id="@+id/testPopuwindow"
                android:text="选择尺码"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
